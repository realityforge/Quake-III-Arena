cc_library(
    name = "curl",
    srcs = [
        "cl_curl.c",
    ],
    hdrs = [
        "cl_curl.h",
    ],
    deps = [
        ":api",
        "//code/cgame:api",
        "//code/game:bg_api",
        "//code/qcommon",
        "//code/renderer:api",
        "//code/ui:api",
        "@curl",
    ],
)

cc_library(
    name = "api",
    hdrs = [
        "client.h",
        "keycodes.h",
        "keys.h",
    ],
    defines = ["USE_VOIP"] + ENGINE_DEFINES,
    visibility = [
        "//code/q3_ui:__pkg__",
        "//code/sdl:__pkg__",
        "//code/sys:__pkg__",
        "//code/ui:__pkg__",
    ],
    deps = [
        ":snd_api",
        "//code/cgame:api",
        "//code/game:bg_api",
        "//code/qcommon",
        "//code/renderer:api",
        "//code/ui:api",
        "@opus//:opus_interface",
    ],
)

cc_library(
    name = "snd_api",
    hdrs = ["snd_public.h"],
    visibility = ["//code/sdl:__pkg__"],
    deps = ["//code/qcommon:shared_api"],
)

cc_library(
    name = "snd_internal_api",
    hdrs = ["snd_local.h"],
    visibility = ["//code/sdl:__pkg__"],
    deps = [
        ":snd_api",
        "//code/qcommon",
        "//code/qcommon:shared_api",
    ],
)

cc_library(
    name = "snd_codec_api",
    hdrs = [
        "snd_codec.h",
    ],
    defines = [
        "USE_CODEC_OPUS",
        "USE_CODEC_VORBIS",
    ],
    deps = [
        "//code/qcommon",
        "//code/qcommon:shared_api",
        "@opus",
        "@vorbis",
    ],
)

cc_library(
    name = "snd_codec",
    srcs = [
        "snd_codec.c",
        "snd_codec_ogg.c",
        "snd_codec_opus.c",
        "snd_codec_wav.c",
    ],
    deps = [
        ":api",
        ":snd_codec_api",
        "//code/qcommon",
        "//code/qcommon:shared_api",
        "@opus",
        "@opusfile",
        "@vorbis",
    ],
)

cc_library(
    name = "snd",
    srcs = [
        "snd_adpcm.c",
        "snd_dma.c",
        "snd_main.c",
        "snd_mem.c",
        "snd_mix.c",
        "snd_wavelet.c",
    ],
    deps = [
        ":api",
        ":snd_codec_api",
        ":snd_internal_api",
        "//code/qcommon",
        "//code/qcommon:shared_api",
    ],
)

