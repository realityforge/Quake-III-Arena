    name = "openal_support",
    srcs = [
        "qal.c",
        "qal.h",
        "snd_openal.c",
    ],
    defines = ["USE_OPENAL"],
    deps = [
        ":api",
        ":snd_api",
        ":snd_codec_api",
        ":snd_internal_api",
        "//code/qcommon",
        "//code/qcommon:shared_api",
        "@openal",
    ],
)

cc_library(
    name = "clientexe",
    visibility = DIST_VISIBILITY,
    deps = [
        ":client",
        ":openal_support",
        ":snd",
        ":snd_codec",
        "//code/botlib:botlib_impl",
