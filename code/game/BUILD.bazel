    name = "bg-teamarena",
    srcs = [
        "bg_local.h",
        "bg_pmove.c",
        "bg_slidemove.c",
    ],
    defines = TEAM_ARENA_DEFINES,
    includes = ["."],
    visibility = [
        "//code/cgame:__pkg__",
