cc_library(
    name = "bg_misc-client-teamarena",
    srcs = [
        "bg_local.h",
        "bg_misc.c",
    ],
    defines = CLIENT_GAME_DEFINES + TEAM_ARENA_DEFINES,
    includes = ["."],
    visibility = [
        "//code/cgame:__pkg__",
        "//code/q3_ui:__pkg__",
        "//code/ui:__pkg__",
    ],
    deps = [
        ":bg_api",
        "//code/qcommon:shared_api",
    ],
)

