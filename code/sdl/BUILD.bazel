cc_library(
    name = "sdl_input",
    srcs = ["sdl_input.c"],
    visibility = ["//code/client:__pkg__"],
    deps = [
        "//code/client:api",
        "//code/client:snd_api",
        "//code/qcommon",
        "//code/sys:sys_local",
        "//third_party/libsdl",
    ],
)

cc_library(
    name = "sdl_renderer",
    srcs = [
        "sdl_gamma.c",
        "sdl_glimp.c",
    ],
    hdrs = ["sdl_icon.h"],
    visibility = ["//code/client:__pkg__"],
    deps = [
        "//code/qcommon",
        "//code/renderer:internal_api",
        "//code/sys:sys_local",
        "//third_party/libsdl",
    ],
