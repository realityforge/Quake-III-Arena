# TODO: Move this to some central place?
config_setting(
    name = "macos",
    constraint_values = ["@platforms//os:macos"],
)

cc_library(
    name = "opusfile",
    srcs = [
        "src/http.c",
        "src/info.c",
        "src/internal.c",
        "src/internal.h",
        "src/opusfile.c",
        "src/stream.c",
        "src/wincerts.c",
        "src/winerrno.h",
    ],
    hdrs = [
        "include/opusfile.h",
    ],
    copts = select({
        ":macos": [],
        "//conditions:default": ["-Wno-maybe-uninitialized"],
    }),
    defines = ["USE_CODEC_VORBIS"],
    includes = ["include"],
    visibility = [
        "//code/client:__pkg__",
    ],
    deps = [
        "//third_party/ogg",
        "//third_party/opus",
    ],
)
